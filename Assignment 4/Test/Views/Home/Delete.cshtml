            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.Name)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
