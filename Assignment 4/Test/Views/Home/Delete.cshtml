                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.Gender, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.Department)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.Department, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.TermsAndConditions)</b>
